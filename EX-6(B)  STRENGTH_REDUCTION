%{
#include <stdio.h>
#include <string.h>
%}

ID      [a-zA-Z][a-zA-Z0-9]*

%%
{ID}"*2"    { yytext[strlen(yytext)-2]='\0'; printf("(%s<<1)",yytext); }
{ID}"/2"    { yytext[strlen(yytext)-2]='\0'; printf("(%s>>1)",yytext); }
.|\n        { ECHO; }
%%

int main() {
    printf("Enter expression with *2 or /2: ");
    yylex();
    return 0;
}
int yywrap() { return 1; }


/*
Enter expression with *2 or /2: x/2
Output: (x>>1)
*/
