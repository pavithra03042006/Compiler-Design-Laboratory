%{
#include <stdio.h>
#include <string.h>
%}

ID      [a-zA-Z][a-zA-Z0-9]*

%%
"0+"{ID}    { printf("%s", yytext+2); }
{ID}"+0"    { yytext[strlen(yytext)-2]='\0'; printf("%s",yytext); }

"1*"{ID}    { printf("%s", yytext+2); }
{ID}"*1"    { yytext[strlen(yytext)-2]='\0'; printf("%s",yytext); }

"0*"{ID}    { printf("0"); }
{ID}"*0"    { printf("0"); }

.|\n        { ECHO; }
%%

int main() {
    printf("Enter algebraic expression: ");
    yylex();
    return 0;
}
int yywrap() { return 1; }


/*
Enter algebraic expression: 1*z
Output: z

Enter algebraic expression: m*0
Output: 0
*/
